<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.stock.db.bean.StockBaseInfo">
	<select id="selectAll" resultType="org.stock.db.bean.StockBaseInfo">
		select * from stock_base_info
	</select>
	
	<select id="selectByType" parameterType="int" resultType="org.stock.db.bean.StockBaseInfo">
		select * from stock_base_info where type = #{type}
	</select>	

	<select id="selectByCodeType" parameterType="int" resultType="org.stock.db.bean.StockBaseInfo">
		select * from stock_base_info where code = #{code} and type = #{type}
	</select>

	<insert id="insert" parameterType="org.stock.db.bean.StockBaseInfo"
		flushCache="true" keyProperty="id" useGeneratedKeys="true">
		insert into stock_base_info(code, name, type, descp) values(#{code}, #{name}, #{type}, #{descp})
	</insert>
	
		<insert id="insertBatch" parameterType="java.util.List" flushCache="true">
		insert into stock_base_info(code, name, type, descp) values
		<foreach collection="list" item="item" index="index" separator=",">  
			(#{code}, #{name}, #{type}, #{descp})
    	</foreach> 
	</insert>
</mapper>